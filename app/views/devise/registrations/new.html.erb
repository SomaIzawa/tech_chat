<h1>新規会員登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <dl>
    <dt>
      <label for="title"><%= f.label :email %></label>
    </dt>
    <dd>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </dd>
  </dl>
  <dl>
    <dt>
      <label for="title"><%= f.label :password %></label>
    </dt>
    <dd>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </dd>
  </dl>
  <dl>
    <dt>
      <label for="title"><%= f.label :password_confirmation %></label>
    </dt>
    <dd>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>  
    </dd>
  </dl>
  <div class="flex">
    <div class="btn_link_w">
      <%= link_to "会員の方はこちらからログイン", new_user_registration_path %>
    </div>
    <div class="actions btn_link">
      <%= f.submit "登録" %>
    </div>
  </div>
<% end %>
